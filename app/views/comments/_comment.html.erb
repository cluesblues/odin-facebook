<div id="comment-<%= comment.id %>">
  <% if comment.user == current_user %>
  <div class="dropdown pull-right">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to "Edit", edit_comment_path(comment), remote: true %></li>
      <li><%= link_to "Delete", comment_path(comment), method: :delete, remote: true %></li>
    </ul>
  </div>
  <% end %>
  <strong><%= comment.user.name %></strong>
  <p><%= comment.content %></p>
</div>
