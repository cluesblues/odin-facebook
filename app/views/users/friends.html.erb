<% if @invitations.any? %>
<h1>Pending Friends Requests</h1>
<div>
  <% @invitations.each do |invitation| %>
  <h3><%= invitation.from_user.name %></h3>
  <p><%= invitation.from_user.email %></p>
  <%= link_to "Accept", friendships_path(friendship: {
                                                                user_id: current_user.id,
                                                                friend_id: invitation.from_user.id
                                                                },
                                                              invitation: invitation.id),
                                    method: "post" %>
  <%= link_to "Deny", invitation_path(invitation), method: "patch" %>
  <% end %>
</div>
<% end %>

<% if @friendships.any? %>
<h1>Your friends</h1>
<div>
  <% @friendships.each do |friendship| %>
  <h3><%= friendship.friend.name %></h3>
  <p><%= friendship.friend.email %></p>
  <%= link_to "Unfriend", friendship_path(friendship), method: "delete" %>
  <% end %>
</div>
<% end %>

