<div class="container">
  <div class="well clearfix" id="create-post">
    <div class="form">
    <%= form_for(:post, url: posts_path) do |f| %>
      <div class="form-group">
        <%= f.text_field :content, class: "form-control input-lg",
                                                    placeholder: "What's on your mind..." %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-default pull-right" %>
      </div>
    <% end %>
    </div>
</div>
</div>


