<%= form_for @info, html: {class: "form-horizontal"} do |f| %>

<%= f.hidden_field :user_id, value: current_user.id %>

<div class="form-group">
  <%= f.label :work, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :work, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :education, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :education, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :address, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :phone, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :phone, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :about, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_area :about, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :birthday, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.date_field :birthday, class: "form-control" %>
  </div>
</div>
<div class="text-center">
  <%= f.submit "Save your profile", class: 'btn btn-success bt-lg' %>
</div>


<% end %>
