<% if user_signed_in? %>
<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('http://i.imgur.com/GaJGtSh.png'), root_url %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to current_user.name, user_path(current_user) %></li>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li>
          <a href="#myModal" data-toggle="modal" data-target="#myModal">Notifications</a>
          <% if count == 0 %>
            <span class="label label-info"><%= count %></span>
          <% else %>
            <span class="label label-warning"><%= count %></span>
          <% end %>
        </li>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>
<% else %>
<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('http://i.imgur.com/GaJGtSh.png') %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "navbar-form navbar-right"}) do |f| %>
        <div class="form-group">
          <div>
            <%= f.label :email, class: "signin_label" %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
            <% if devise_mapping.rememberable? -%>
            <div id="remember-me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end -%>
        </div>
        <div class="form-group">
          <div>
            <%= f.label :password, class: "signin_label" %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <div id="forgot-password">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "signin_text" %>
            </div>
            <% end -%>
        </div>
        <div class="form-group">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>

        <% end %>
    </div>
  </div>
</nav>
<% end %>




